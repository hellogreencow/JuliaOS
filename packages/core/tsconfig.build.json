{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@juliaos/*": ["../*/dist"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts",
    "src/examples/**/*",
    "src/test/**/*"
  ]
} 